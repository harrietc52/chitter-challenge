<!DOCTYPE html>
<html>
  <head>
    <title>Chitter!</title>
  </head>
  <body>
    <div>
      <h1>Welcome to Chitter!</h1>
    </div>
    <div id='error' >
      <% if flash[:errors] && !flash[:errors].empty? %>
        <ul id='errors'>
          <% flash[:errors].each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
